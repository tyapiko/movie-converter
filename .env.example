# ========================================
# ショート動画コンバーター 環境設定ファイル
# ========================================
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# ========================================
# アプリケーション設定
# ========================================
# Streamlitアプリのポート番号
STREAMLIT_PORT=8501

# アプリケーションのタイトル
APP_TITLE=ショート動画コンバーター

# デバッグモード（true/false）
DEBUG=false

# ========================================
# VOICEVOX設定
# ========================================
# VOICEVOXエンジンのURL
VOICEVOX_URL=http://localhost:50021

# VOICEVOXのポート番号
VOICEVOX_PORT=50021

# デフォルトのスピーカーID（雨晴はう: 10）
DEFAULT_SPEAKER_ID=10

# VOICEVOXのタイムアウト（秒）
VOICEVOX_TIMEOUT=30

# ========================================
# 動画処理設定
# ========================================
# 動画出力の最大ビットレート
VIDEO_BITRATE=8000k

# 動画品質設定（CRF値: 0-51, 低いほど高品質）
VIDEO_CRF=18

# FFmpegのエンコードプリセット（ultrafast, fast, medium, slow, veryslow）
FFMPEG_PRESET=slow

# 最大動画時間（秒）
MAX_VIDEO_DURATION=300

# 一時ファイルの保存ディレクトリ
TEMP_DIR=./tmp

# ========================================
# Streamlit設定
# ========================================
# ブラウザの自動起動（true/false）
STREAMLIT_BROWSER_GATHERUSAGESTATS=false

# サーバーヘッドレスモード（true/false）
STREAMLIT_SERVER_HEADLESS=true

# ファイル監視によるホットリロード（true/false）
STREAMLIT_SERVER_RUNONSAVE=true

# 最大アップロードサイズ（MB）
STREAMLIT_SERVER_MAXUPLOADSIZE=500

# ========================================
# セキュリティ設定
# ========================================
# CORS設定（本番環境では制限を追加）
CORS_ALLOWED_ORIGINS=*

# セッションタイムアウト（分）
SESSION_TIMEOUT=30

# ========================================
# ログ設定
# ========================================
# ログレベル（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# ログファイルのパス
LOG_FILE=./logs/app.log

# ログの最大ファイルサイズ（MB）
LOG_MAX_SIZE=10

# ログファイルの保持数
LOG_BACKUP_COUNT=5

# ========================================
# フォント設定
# ========================================
# デフォルトフォントパス
DEFAULT_FONT_PATH=fonts/NotoSansJP-Regular.ttf

# フォールバックフォントパス
FALLBACK_FONT_PATH=NotoSansCJK-Regular.ttc

# デフォルトフォントサイズ
DEFAULT_FONT_SIZE=60

# ========================================
# 本番環境設定
# ========================================
# 本番環境フラグ（true/false）
PRODUCTION=false

# リバースプロキシ設定
REVERSE_PROXY=false

# SSL設定（true/false）
USE_SSL=false

# ドメイン名（本番環境用）
DOMAIN_NAME=localhost